@using SwitchSupport.Domain.ViewModels.Account;
@model ForgotPassword
@{
    ViewData["Title"] = "بازیابی کلمه عبور";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles
    {
    <link rel="stylesheet" type="text/css" href="/css/user.css">
}

    @section Header
    {
    <partial name="_Header" />
}

    <div class="user-page-style">

        <div class="breadcumb-layer">
            <div class="container">
                <ul itemtype="http://schema.org/BreadcrumbList" class="breadcrumb">
                    <li itemtype="http://schema.org/ListItem" itemscope itemprop="itemListElement"><a href="/" itemprop="item"><span itemprop="name"> صفحه اصلی </span></a></li>
                    <li itemtype="http://schema.org/ListItem" itemscope itemprop="itemListElement"><a asp-action="ForgotPassword" asp-controller="Account" itemprop="item"><span itemprop="name">بازیابی کلمه عبور</span></a></li>
                </ul>
            </div>
        </div>

        <div class="user-page">

            <div class="container">

                <div class="row">

                    <div class="col-md-7 col-sm-12 col-xs-12 pull-left">

                        <div class="inner">
                            <div class="description">                             
                            </div>
                        </div>

                    </div>

                    <div class="col-md-5 col-sm-12 col-xs-12 pull-right">

                    <form asp-action="ForgotPassword" asp-controller="Account" method="post" class="shadow-style">

                            <div class="inner">

                                <h2> <i class="icon-three-dots"></i>بازیابی کلمه عبور</h2>


                                <div class="input-layer">
                                    <span><i class="icon-mail-envelope"></i> پست الکترونیک </span>
                                    <input type="email" asp-for="Email">
                                </div>
                                <span class="error-style" asp-validation-for="Email"></span>                                                                                            
                                <button type="submit">بازیابی کلمه عبور</button>



                        </form>

                    </div>

                </div>


            </div>

        </div>

    </div>
    @section Scripts
    {
    <partial name="_JqueryValidation"></partial>
    }