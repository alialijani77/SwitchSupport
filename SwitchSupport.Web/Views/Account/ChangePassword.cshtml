@model SwitchSupport.Domain.ViewModels.Account.ChangePasswordViewModel;

@{
    ViewData["Title"] = "تغییر کلمه عبور";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles
    {
    <link rel="stylesheet" type="text/css" href="/css/user.css">
}

    @section Header
    {
    <partial name="_Header" />
}

    <div class="user-page-style">

        <div class="breadcumb-layer">
            <div class="container">
                <ul itemtype="http://schema.org/BreadcrumbList" class="breadcrumb">
                    <li itemtype="http://schema.org/ListItem" itemscope itemprop="itemListElement"><a href="/" itemprop="item"><span itemprop="name"> صفحه اصلی </span></a></li>
                    <li itemtype="http://schema.org/ListItem" itemscope itemprop="itemListElement"><a asp-action="Login" asp-controller="Account" itemprop="item"><span itemprop="name"> تغییر کلمه عبور </span></a></li>
                </ul>
            </div>
        </div>

        <div class="user-page">

            <div class="container">

                <div class="row">

                    <div class="col-md-7 col-sm-12 col-xs-12 pull-left">

                        <div class="inner">
                            <div class="description">                                                      
                            </div>
                        </div>

                    </div>

                    <div class="col-md-5 col-sm-12 col-xs-12 pull-right">

                        <form asp-action="ChangePassword" asp-controller="Account" method="post">
                            <div class="inner">

                                <h2> <i class="icon-three-dots"></i> تغییر کلمه عبور</h2>

                                <div class="input-layer mt-50">
                                    <span><i class="icon-lock"></i> رمز عبور قبلی </span>
                                    <input type="password" asp-for="OldPassword">
                                </div>
                                <span class="error-style" asp-validation-for="OldPassword"></span>

                                <div class="input-layer mt-50">
                                    <span><i class="icon-lock"></i> رمز عبور جدید </span>
                                    <input type="password" asp-for="NewPassword">
                                </div>
                                <span class="error-style" asp-validation-for="NewPassword"></span>

                                <div class="input-layer mt-50">
                                    <span><i class="icon-lock"></i>تکرار رمز عبور جدید</span>
                                    <input type="password" asp-for="ReNewPassword">
                                </div>
                                <span class="error-style" asp-validation-for="ReNewPassword"></span>

                                <button type="submit">تغییر کلمه عبور</button>

                            </div>

                        </form>

                    </div>

                </div>


            </div>

        </div>

    </div>

    @section Scripts
    {
    <partial name="_JqueryValidation" />
}